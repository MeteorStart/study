/* 日历主要颜色相关样式 */

.default_color,
.default_weekend-color{
    color: #2A2A2A;
}
.default_handle-color {
    color: #D81920;
}

.default_week-color {
    color: #ff629a;
}

.default_today {
    color: #fff;
    background-color: #D81920;
}

.default_choosed {
    color: #2A2A2A;
    border: 3rpx solid #D81920;
    border-radius: 50%;
}

.default_date-disable {
    color: #c7c7c7;
}

.default_prev-month-date,
.default_next-month-date {
    color: #e2e2e2;
}

.default_normal-date {
    color: #2A2A2A;
}

.default_todo-circle {
    border-color: #2A2A2A;
}

.default_todo-dot {
    background-color: #e54d42;
}

.default_date-desc {
    color: #c2c2c2;
}

.default_date-desc-lunar {
    color: #2A2A2A;
}

.default_date-desc-disable {
    color: #e2e2e2;
}