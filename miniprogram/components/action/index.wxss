/**app.wxss**/
.flex-row {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  
  .flex-column {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }

.item-action {
    width: 690rpx;
    height: 400rpx;
    margin-top: 20rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 5rpx 10rpx 0rpx rgba(0, 0, 0, 0.03);
    border-radius: 16rpx;
  }
  
  .item-img {
    width: 690rpx;
    height: 300rpx;
    border-radius: 15rpx 15rpx 0rpx 0rpx;
  }
  
  .item-title {
    width: 670rpx;
    height: 100rpx;
    size: 32rpx;
    padding-left: 20rpx;
    color: #2A2A2A;
    font-weight: 600;
    background: #FFFFFF;
    border-radius:0rpx 0rpx 15rpx 15rpx ;
  }