.flex-row {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.flex-column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.gift-item {
    width: 630rpx;
    height: 200rpx;
    padding: 30rpx;
    background: #FFFFFF;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
}

.gift-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 16rpx;
    z-index: 0;
}

.gift-content {
    height: 100%;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.gift-integral-icon {
    width: 25rpx;
    height: 25rpx;
}

.gift-title {
    font-size: 30rpx;
    color: #2A2A2A;
}

.gift-integral-title {
    margin-left: 8rpx;
    font-size: 24rpx;
    color: #999999;
}

.gift-integral {
    margin-left: 10rpx;
    font-size: 24rpx;
    color: #D81920;
}

.gift-nochoose {
    font-size: 24rpx;
    color: #FFFFFF;
    display: flex;
    flex-direction: column-reverse;
    width: 400rpx;
    height: 70rpx;
    background: #D81920;
    border-radius: 10rpx;
}

.gift-choose {
    background: #FFB1B4;
    font-size: 24rpx;
    color: #FFFFFF;
    display: flex;
    flex-direction: column-reverse;
    width: 400rpx;
    height: 70rpx;
    border-radius: 10rpx;
}