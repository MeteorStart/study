/* pages/actiondetail/index.wxss */
page{
  height: 100%;
}
.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 999;
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  height: 368rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
}
.wx-popup-con {
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}
.wx-popup-btn {
  height: calc(100% - 260rpx);
  width: 100%;
  display: flex;
}
.wx-popup-btn text{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  border-top: 1rpx solid #E6E6E6;
  border-right: 1rpx solid #E6E6E6;
  color: #999999;
  font-size: 32rpx;
  font-weight: 600;
}