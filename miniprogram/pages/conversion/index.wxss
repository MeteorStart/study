/* pages/conversion/index.wxss */
.conversion {
  padding: 30rpx;
}

.conversion-item {
  width: 630rpx;
  height: 200rpx;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.conversion-image-state {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
}

.coversion-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  z-index: 0;
}

.coversion-state {
  width: 200rpx;
  height: 56rpx;
  margin-top: -56rpx;
  background: #000000;
  opacity: 0.7;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  border-radius: 0rpx 0rpx 16rpx 16rpx;
  z-index: 1;
}

.gift-content {
  height: 100%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.gift-name {
  font-size: 30rpx;
  color: #2A2A2A;
}

.gift-need-integral {
  margin-top: 20rpx;
}

.gift-need-integral2 {
  margin-top: 10rpx;
}

.gift-icon {
  width: 25rpx;
  height: 25rpx;
}

.need-integral-title {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.need-integral {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #D81920;
}

.gift-info {
  flex-grow: 1;
  font-size: 24rpx;
  color: #D81920;
  display: flex;
  flex-direction: column-reverse;
}